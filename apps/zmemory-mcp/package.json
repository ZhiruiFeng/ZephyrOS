{
  "name": "@zephyros/zmemory-mcp",
  "version": "1.0.0",
  "description": "ZMemory MCP Server - Memory management for AI agents",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "zmemory-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:oauth": "node scripts/test-oauth.js",
    "test:mcp": "node scripts/test-mcp.js",
    "test:create-task": "node test-create-task.js",
    "generate:oauth": "node scripts/generate-oauth-config.js",
    "generate:prod": "node scripts/generate-prod-oauth-config.js",
    "generate:custom": "node scripts/generate-custom-oauth-config.js",
    "setup:claude": "node scripts/setup-claude-desktop.js",
    "security:check": "node scripts/security-check.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "agent",
    "task-management",
    "oauth"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
