{
  "version": 2,
  "name": "zmemory-mcp",
  "framework": null,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/mcp.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/mcp.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/health",
      "dest": "/api/mcp"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
