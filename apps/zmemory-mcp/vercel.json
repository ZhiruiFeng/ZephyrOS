{
  "version": 2,
  "name": "zmemory-mcp",
  "framework": null,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "api/mcp.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/mcp"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
