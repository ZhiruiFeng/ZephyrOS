{
  "version": 2,
  "name": "zmemory-mcp",
  "builds": [
    {
      "src": "api/mcp.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/mcp.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/health",
      "dest": "/api/mcp"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
