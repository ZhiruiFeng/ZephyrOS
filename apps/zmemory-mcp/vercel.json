{
  "version": 2,
  "name": "zmemory-mcp",
  "framework": null,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/mcp"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
