# Agent API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=ant-your-anthropic-api-key-here

# AWS Configuration (optional - for Bedrock)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For production: REDIS_URL=redis://your-elasticache-endpoint:6379

# Agent Configuration
AGENT_DEFAULT_MODEL=gpt-4-1106-preview
AGENT_MAX_TOKENS=2000
AGENT_TIMEOUT=30000
AGENT_TEMPERATURE=0.7

# Rate Limiting (requests per minute)
AGENT_RATE_LIMIT_USER=50
AGENT_RATE_LIMIT_GLOBAL=500

# Session Configuration
AGENT_SESSION_TTL=86400  # 24 hours in seconds

# Feature Flags
AGENT_ENABLE_TOOLS=true
AGENT_ENABLE_STREAMING=true
AGENT_ENABLE_MEMORY_CONTEXT=true
AGENT_LOG_CONVERSATIONS=true