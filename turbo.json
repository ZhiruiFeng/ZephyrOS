{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "apps/zflow#dev": {
      "cache": false,
      "persistent": true,
      "env": ["NEXT_PUBLIC_API_URL"]
    },
    "apps/zmemory#dev": {
      "cache": false,
      "persistent": true,
      "env": ["NEXT_PUBLIC_SUPABASE_URL", "SUPABASE_SERVICE_ROLE_KEY"]
    }
  }
} 